{
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "dist",
      "lib": ["ESNext"],
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "types": ["node"],
    //   "allowSyntheticDefaultImports": true,
      "allowImportingTsExtensions": true,
      "noEmit": true,
    },
    "ts-node": {
      "esm": true
    },
    "include": ["src/**/*.ts", "src/database.types.ts"],
    "exclude": ["node_modules"]
  }
  